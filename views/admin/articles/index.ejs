<%- include("../../partials/header.ejs") %>
<%- include("../../partials/navbar.ejs") %>
<div class="container">
	<hr>
	<h2>Articles</h2>
	<a class="btn btn-success" href="/admin/article/new">
		Create Article
	</a>
	<hr>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Title</th>
				<th>Slug</th>
				<th>Category</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			<% articles.forEach((article) => { %>
				<tr>
					<td><%= article.id %></td>
					<td><%= article.title %></td>
					<td><%= article.slug %></td>
					<td><%= article.category.title %></td>
					<td>
						<a class="btn btn-warning" href="/admin/article/edit/<%= article.id %>">Edit</a>
						<form method="POST" action="/article/delete" onsubmit="confirmarDelecao(event, this)" style="display: inline;">
							<input type="hidden" name="id" value="<%= article.id %>">
							<button class="btn btn-danger">Delete</button>
						</form>
					</td>
				</tr>
			<% }); %>
		</tbody>	
	</table>
</div>
<%- include("../../partials/footer.ejs") %>
<script>
	var confirmarDelecao = function(event, form) {
		event.preventDefault();
		let decision = confirm("VocÃª realmente deseja apagar o artigo?");
		if(decision) {
			form.submit();
		}
	}
</script>