<%- include('../../partials/header.ejs') %>
<%- include('../../partials/homeNavbar.ejs') %>
<body>
	<div class="container">
		<% result.articles.rows.forEach(article => { %>
			<hr>
			<div class="card">
				<div class="card-header">
					<h1><%= article.title %></h1>
				</div>
				<div class="card-body">
					<a class="btn btn-success" href="/<%= article.slug %>">
						read article
					</a>
				</div>
			</div><br>
		<% }); %>
		<div class="rows">
			<% if (result.next) { %>
				<a 
					class="btn btn-primary float-right m-1"
					href="/articles/page/<%= page +1 %>"
				>
				Pr√≥ximo
				</a>
			<% } %>
			<% if (page > 1) { %>
				<a 
					class="btn btn-primary float-right m-1"
					href="/articles/page/<%= page -1 %>"
				>
				Anterior
				</a>
			<% } %>
		</div>
	</div>
</body>
